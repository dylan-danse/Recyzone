{% extends 'base.html.twig' %}

{% block body %}

<br>
<br>
<br>

<table id="billDeposits" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Numéro</th>
            <th>Date de dépôt</th>
            <th>Type de déchets</th>
            <th>Volume déposé</th>
        </tr>
    </thead>
    <tbody>
    {% for deposit in deposits %}
        <tr>
            <td>{{ deposit.id }}</td>
            <td>{{ deposit.creationDate|date("d F Y") }}</td>
            <td>{{ deposit.wasteType.name }}</td>
            <td>{{ deposit.quantity }} m³</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<script>

    $( document ).ready(function() {
        $('#billDeposits').DataTable();
    });

</script>

{% endblock %}
