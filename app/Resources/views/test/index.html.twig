{% extends 'base.html.twig' %}

{% block body %}

<h1>Test Controller</h1>

    <table class="table table-*hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Creation Date</th>
            </tr>
        </thead>
        <tbody>

            {% for test in tests %}
            <tr>
                <td>{{test.name}}</td>
                <td>{{test.description}}</td>
                <td>{{test.creationDate|date("Y-m-d H:i:s")}}</td>
            </tr>
            {% endfor %}

        </tbody>
    </table>

{% endblock %}
