{% extends 'base.html.twig' %}

{% block body %}


    <br>
    <br>

    <table id="notificationTable" class="table table-striped table-hover text-center">
        <thead>
        <tr>
            <th class="text-center">Parc</th>
            <th class="text-center">Conteneur</th>
            <th class="text-center">Type de déchets</th>
            <th class="text-center">Volume</th>
            <th class="text-center">Remplissage</th>
            <th class="text-center">Selectionner</th>
        </tr>
        </thead>
        <tbody>
        {% for container in containers %}
            <tr>
                <td>{{ container.park.FullAdress }}</td>
                <td>{{ container.id }}</td>
                <td>{{ container.wasteType.name }}</td>
                <td>{{ container.capacity }}</td>
                <td>{% set percentage = container.usedVolume/container.capacity*100 %} {{ percentage }}%</td>
                <td><input type="checkbox"></td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <td colspan="6" align="center"><button onclick="generateTournee()" class="btn btn-danger pull-right">Générer tournée</button></td>
        </tr>
        <tr>
            <td colspan="6" align="center"><button onclick="generateBill()" class="btn btn-danger pull-right">Générer factures</button></td>
        </tr>
        </tfoot>
    </table>

    <div id="modalBill" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Recyzone - Facturation</h4>
                </div>
                <div class="modal-body">
                    <p class="text-center">x factures générées pour un total de y &euro;</p>
                    <hr>
                    <table class="table table-striped table-hover text-center">
                        <thead>
                            <tr>
                                <th class="text-center">Commune</th>
                                <th class="text-center">Ménage</th>
                                <th class="text-center">Montant</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>aaa</td>
                                <td>zzz</td>
                                <td>eee</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


    <script>
        $('input[type=checkbox]').change(function () {
            $(this).closest('tr').find('td').toggleClass('danger', this.checked);
        });

        function generateTournee(){
            $.ajax({
                url: "/generateTournee",
                method: "get"
            }).done(function(msg){
                console.log(msg);
            });
            //TODO : empty all the containers selected ?
        }

        function generateBill(){
            $('#modalBill').modal('show');
            $.ajax({
                url: "",
                method: "get"
            }).done(function(msg){
                console.log(msg);
            });
        }
    </script>


{% endblock %}
